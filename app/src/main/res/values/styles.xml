<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activity_change_anim</item>
    </style>

    <style name="AppSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/icon_start</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">?android:windowNoTitle</item>
    </style>

    <!-- 页面打开方式 （左进右出）-->
    <style name="activity_change_anim" parent="@android:style/Animation.Activity">
        <!--<item name="android:activityOpenEnterAnimation">@anim/fade_in_left</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/fade_out_right</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/fade_in_right</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/fade_out_left</item>-->
        <item name="android:activityOpenEnterAnimation">@anim/fade_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out_right</item>
    </style>

    <!-- f5f5f5线. -->
    <style name="line_f5f5f5_drivie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_f5f5f5</item>
    </style>

    <!-- E5E5E5线. -->
    <style name="line_E5E5E5_drivie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_E5E5E5</item>
    </style>

    <!--dialog-->
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="common_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="window_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画 -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画 -->
    </style>

    <!-- tancent -->
    <style name="RadiobuttonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="BottomDialog" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="TimelineItemButton">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="TimelineItemTitle" parent="TimelineItemButton">
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ConfirmDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">

        <item name="windowMinWidthMinor">90%</item>


        <item name="android:textColorPrimary">#000000</item>

        <item name="colorAccent">#0accac</item>
    </style>
    <style name="DialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppProgressBarStyle">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress_bar</item>
        <!--<item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>-->
    </style>

    <style name="NumberProgressBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#fff</item>
        <item name="progress_reached_color">@color/colorAccent</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/colorAccent</item>

        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray4</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


</resources>
