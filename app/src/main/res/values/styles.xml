<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activity_change_anim</item>
    </style>

    <!-- 页面打开方式 （左进右出）-->
    <style name="activity_change_anim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out_left</item>
    </style>

    <!-- f5f5f5线. -->
    <style name="line_f5f5f5_drivie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_f5f5f5</item>
    </style>

    <!-- E5E5E5线. -->
    <style name="line_E5E5E5_drivie">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_E5E5E5</item>
    </style>

    <!--dialog-->
    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="window_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画 -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画 -->
    </style>

</resources>
