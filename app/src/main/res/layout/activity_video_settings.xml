                        <!--android:layout_height="wrap_content"-->
                        <!--android:button="@null"-->
                        <!--android:text="1800"-->
                        <!--android:textColor="@color/text_radio_color"/>-->
                    <!--<RadioButton-->
                        <!--android:id="@+id/rb_video_bitrate_high"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:button="@null"-->
                        <!--android:text="2400"-->
                        <!--android:textColor="@color/text_radio_color"/>-->
                <!--</RadioGroup>-->

                <TextView
                    android:id="@+id/tv_recommend_bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>
                <EditText
                    android:id="@+id/et_biterate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:theme="@style/CustomEditText"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:hint="建议800-4800，默认1800"
                    android:textColorHint="@color/colorGray4"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fps"
                android:layout_below="@id/ll_bite_rate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="fps:"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="center"
                    android:theme="@style/CustomEditText"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:hint="建议15-30，默认20"
                    android:textColorHint="@color/colorGray4"/>
                <TextView
                    android:id="@+id/tv_recommend_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gop"
                android:layout_below="@id/ll_fps"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="关键帧间隔:"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_gop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/CustomEditText"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:hint="建议1-10，默认3秒"
                    android:textColorHint="@color/colorGray4"/>
                <TextView
                    android:id="@+id/tv_recommend_gop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="visible"/>
            </LinearLayout>

            <!--<View-->
                <!--android:layout_width="match_parent"-->
