        <!-- 推荐质量，标清、高清、超清 -->
        <RadioGroup
            android:id="@+id/rg_video_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_video_quality_sd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:button="@null"
                android:text="标清"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_radio_bg"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"/>
            <RadioButton
                android:id="@+id/rb_video_quality_hd"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:button="@null"
                android:text="高清"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_radio_bg"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"/>
            <RadioButton
                android:id="@+id/rb_video_quality_super"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:button="@null"
                android:text="超清"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_radio_bg"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"/>
            <RadioButton
                android:id="@+id/rb_video_quality_custom"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:button="@null"
                android:text="自定义"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:background="@drawable/selector_radio_bg"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_resolution"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="分辨率:"
                    android:textSize="16sp"/>

                <RadioGroup
                    android:id="@+id/rg_video_resolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_video_resolution_360p"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:text="360p"
                        android:textSize="16sp"
                        android:textColor="@color/text_radio_color"/>
                    <RadioButton
                        android:id="@+id/rb_video_resolution_540p"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:text="540p"
                        android:textSize="16sp"
                        android:textColor="@color/text_radio_color"/>
                    <RadioButton
                        android:id="@+id/rb_video_resolution_720p"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:button="@null"
                        android:text="720p"
                        android:textSize="16sp"
                        android:textColor="@color/text_radio_color"/>
                </RadioGroup>

                <TextView
                    android:id="@+id/tv_recommend_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bite_rate"
                android:layout_below="@id/ll_resolution"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="码率(kbps):"
                    android:textSize="16sp"/>

                <!--<RadioGroup-->
                    <!--android:id="@+id/rg_video_bitrate"-->
