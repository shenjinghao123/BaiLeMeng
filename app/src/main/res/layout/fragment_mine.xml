<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:padding="@dimen/dimen_15">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mine_head_sdv"
            android:layout_width="@dimen/dimen_55"
            android:layout_height="@dimen/dimen_55"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarImage="@mipmap/ic_common_image_loading"
            fresco:progressBarAutoRotateInterval="500"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/mine_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_head_sdv"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="哦呵呵呵"/>

        <TextView
            android:id="@+id/mine_sex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_head_sdv"
            android:layout_alignBottom="@+id/mine_head_sdv"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="男"/>

        <TextView
            android:id="@+id/mine_age_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mine_sex_tv"
            android:layout_alignTop="@+id/mine_sex_tv"
            android:layout_marginLeft="@dimen/dimen_10"
            android:text="50岁"/>

        <TextView
            android:id="@+id/mine_edit_profile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="修改资料"/>

    </RelativeLayout>

    <View style="@style/line_E5E5E5_drivie"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:background="@color/color_ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的级别"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="长工"
            android:drawablePadding="@dimen/dimen_5"
            android:drawableRight="@mipmap/icon_small_more_black"/>

    </RelativeLayout>

    <View style="@style/line_E5E5E5_drivie"/>

