<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/home_scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_141">

                    <com.youth.banner.Banner
                        android:id="@+id/home_banner_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:delay_time="3000"
                        app:image_scale_type="fit_xy"
                        app:indicator_drawable_selected="@drawable/indicator_drawable_selected"
                        app:indicator_drawable_unselected="@drawable/indicator_drawable_unselected"
                        app:indicator_height="6dp"
                        app:indicator_margin="5dp"
                        app:indicator_width="6dp"
                        app:is_auto_play="true"
                        app:title_background="#55000000"
                        app:title_height="28dp"
                        app:title_textcolor="@color/color_ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_15"
                    android:paddingBottom="@dimen/dimen_15"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/round_enter_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_red_textview"
                        android:gravity="center"
                        android:textColor="@color/color_ffffff"
                        android:text="活动"/>

                    <TextView
                        android:id="@+id/round_enter_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_red_textview"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:textColor="@color/color_ffffff"
                        android:text="活动"/>

                    <TextView
                        android:id="@+id/round_enter_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_red_textview"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:textColor="@color/color_ffffff"
                        android:text="活动"/>

                    <TextView
                        android:id="@+id/round_enter_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_round_red_textview"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:textColor="@color/color_ffffff"
                        android:text="活动"/>

                </LinearLayout>

                <com.bailemeng.app.widget.MyGridView
                    android:id="@+id/home_item_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2" />

            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>